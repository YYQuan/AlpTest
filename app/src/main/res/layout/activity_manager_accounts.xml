<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191A2A"
    tools:context=".functionModule.backupMnemonics.BackupMnemonicsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#010110"
        android:paddingTop="@dimen/statusBarSize"
        app:titleTextAppearance="@style/TextAppearance.Title">

        <FrameLayout
            android:id="@+id/layout_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="12dp"
                android:layout_height="17dp"
                android:background="@drawable/ic_title_back_white"/>


        </FrameLayout>


        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:text="HD钱包设置"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"

            />
    </android.support.v7.widget.Toolbar>
    <com.alphawizard.hdwallet.common.base.Layout.PlaceHolder.EmptyLayout
        android:id="@+id/place_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_accounts"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_import_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_color_393a50"
            android:text="导入钱包"
            android:textColor="#ffffffff"
            android:textSize="16sp"
           />
        <Button
            android:id="@+id/btn_create_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_color_6a89c4"
            android:text="创建钱包"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

    </LinearLayout>
</LinearLayout>