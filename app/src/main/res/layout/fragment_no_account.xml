<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lay_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alphawizard.hdwallet.alphahdwallet.functionModule.send.SendActivity"
    android:orientation="vertical"
    android:background="#191A2A"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:foreground="@mipmap/bg_launch"
        android:layout_marginTop="20dp"
        android:layout_marginStart="11dp"
        android:layout_margin="11dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="185dp"
            android:layout_height="146dp"
            android:layout_marginTop="101dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_logo"/>

        <Button
            android:id="@+id/btn_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="128dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:text="创建钱包"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_gradient_blue"/>

        <Button
            android:id="@+id/btn_import"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:text="导入钱包"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_gradient_blue_second"
            />
    </RelativeLayout>


</LinearLayout>
