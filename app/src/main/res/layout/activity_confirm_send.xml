<?xml version="1.0" encoding="utf-8"?>
<com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.alphawizard.hdwallet.alphahdwallet.functionModule.ConfirmSend.ConfirmSendActivity">


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#295EF7"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/statusBarSize">
        <FrameLayout
            android:id="@+id/lay_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/ic_title_back_white"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_send_title"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
    </android.support.percent.PercentRelativeLayout>
    

    <TextView
        android:id="@+id/txt_eth_amount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="-0.000 ETH"
        android:textColor="#ffff0101"
        android:textSize="21sp"
        android:gravity="center"
        android:background="@drawable/bg_color_eaf1ff"
        app:layout_heightPercent = "18%"
        />

    <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent = "9%"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/txt_from"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm_send_from"
            android:textColor="#969696"
            android:textStyle="normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_marginLeftPercent = "5%"

            />

        <TextView
            android:id="@+id/txt_from_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0xe567hjfi5fkjio000fajlkdjfsdiefljfaaefwfds"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center_vertical|left"

            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_marginRightPercent = "5%"
            app:layout_marginLeftPercent = "30%"
            />


    </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
    <View
        android:background="#ffeaf1ff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent = "9%"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/txt_to"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm_send_to"
            android:textColor="#969696"
            android:textStyle="normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_marginLeftPercent = "5%"

            />

        <TextView
            android:id="@+id/txt_to_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0xe567hjfi5fkjio000fajlkdjfsdiefljfaaefwfds"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center_vertical|left"

            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_marginRightPercent = "5%"
            app:layout_marginLeftPercent = "30%"
            />


    </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
    <View
        android:background="#ffeaf1ff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent = "9%"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/txt_gas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_send_gas"
            android:textColor="#969696"
            android:textStyle="normal"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_marginLeftPercent = "5%"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_gas_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00021755 ETH"
            android:textColor="#323232"
            android:textSize="12sp"
            android:gravity="center_vertical|right"

            android:layout_gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_marginRightPercent = "5%"
            app:layout_marginLeftPercent = "30%"
            />


    </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
    <View
        android:background="#ffeaf1ff"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_heightPercent = "32%">
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/layout_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_send_senior"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingBottom="1dp"
                    android:textColor="#ff969696"
                    android:textSize="12sp"
                    app:layout_marginRightPercent = "3%"/>
                <LinearLayout
                    android:id="@+id/layout_setting_senior"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/ic_confirm_send_setting"
                    app:layout_marginRightPercent = "5%">
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/ic_confirm_send_setting_circle"/>

                </LinearLayout>
            </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
        </android.support.percent.PercentRelativeLayout>

        <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
            android:id="@+id/layout_gas_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent = "22%"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/txt_gas_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_send_gas_price"
                android:textColor="#969696"
                android:textStyle="normal"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                app:layout_marginLeftPercent = "5%"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <net.qiujuer.genius.ui.widget.EditText
                android:id="@+id/edit_gas_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#323232"
                android:textSize="12sp"
                android:hint="@string/confirm_send_gas_price_hint"
                android:gravity="center_vertical|right"
                app:gHintTitle="none"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:paddingLeft="50dp"
                app:layout_marginRightPercent = "5%"
                app:layout_marginLeftPercent = "30%"
                />


        </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
        <View
            android:background="#ffeaf1ff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
            android:id="@+id/layout_gas_limit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent = "22%"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/txt_gas_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_send_gas_limit"
                android:textColor="#969696"
                android:textStyle="normal"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                app:layout_marginLeftPercent = "5%"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <net.qiujuer.genius.ui.widget.EditText
                android:id="@+id/edit_gas_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21000"
                android:textColor="#323232"
                android:textSize="12sp"
                android:hint="@string/confirm_send_gas_limit_hint"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                app:gHintTitle="none"
                android:maxLines="1"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:paddingLeft="50dp"
                app:layout_marginRightPercent = "5%"
                app:layout_marginLeftPercent = "30%"
                />


        </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
        <View
            android:background="#ffeaf1ff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
            android:id="@+id/layout_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent = "22%"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/txt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_send_data"
                android:textColor="#969696"
                android:textStyle="normal"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                app:layout_marginLeftPercent = "5%"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <net.qiujuer.genius.ui.widget.EditText
                android:id="@+id/edit_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0x"
                android:textColor="#323232"
                android:textSize="12sp"
                android:singleLine="true"

                android:hint="@string/confirm_send_data_hint"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:inputType="number|numberDecimal"
                android:layout_gravity="center_vertical|left"
                android:background="#FFFFFF"
                app:layout_marginRightPercent = "5%"
                app:layout_marginLeftPercent = "30%"
                app:gHintTitle="none"
                android:padding="5dp"
                android:paddingLeft="50dp"
                />

        </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
        <View
            android:background="#ffeaf1ff"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_marginTopPercent = "11%"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_send_senior"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingBottom="1dp"
                android:textColor="#ff969696"
                android:textSize="12sp"
                app:layout_marginRightPercent = "3%"/>
            <LinearLayout
                android:id="@+id/layout_setting_senior_cancel"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/ic_confirm_send_setting_cancel"
                app:layout_marginRightPercent = "5%">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/ic_confirm_send_setting_circle"/>

            </LinearLayout>
        </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>


    </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
    <net.qiujuer.genius.ui.widget.Loading
        android:id="@+id/loading"
        android:layout_gravity="center"
        android:layout_width="@dimen/len_32"
        android:layout_height="@dimen/len_32"
        app:gBackgroundColor="@color/trans"
        app:gForegroundColor="#295EF7"
        app:gAutoRun="false"/>
    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_heightPercent = "7%"
        app:layout_marginLeftPercent = "5%"
        app:layout_marginRightPercent = "5%"
        android:text="@string/confirm_send_btn"
        android:background="@drawable/bg_gradient_blue"/>

</com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout >
