<com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191A2A"
    android:orientation="vertical"
    tools:context=".functionModule.Wallet.WalletActivity"
    >


    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/ed_keystore"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_marginTopPercent="6%"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        android:gravity="left"
        android:padding="20dp"
        android:hint="@string/import_input_keystore_tips"
        android:inputType="textMultiLine"
        app:gHintTitle="none"
        app:gLineColor="@color/blue_900"
        app:gLineSize="1dp"
        android:textColorHint="#4E4F6C"
        android:textColor="@color/textWhite"
        android:textSize="16sp"
        android:background="@drawable/bg_color_131422_side"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textSize="12sp"
        android:textColor="#707185"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="5%"
        android:text="@string/import_keystore_tips"/>



    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/ed_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_marginTopPercent="6%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:hint="@string/import_input_wallet_name_tips"
        android:textColorHint="#4E4F6C"
        android:textColor="@color/textWhite"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:maxLines="1"

        android:background="@drawable/bg_color_131422_side"
        app:gHintTitle="none"
        app:gLineColor="@color/blue_900"
        app:gLineSize="1dp"
        android:gravity="left|center_vertical"

        android:paddingLeft="20dp"

        />


    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/ed_wallet_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/import_input_wallet_keystore_password_tips"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textColorHint="#4E4F6C"
        android:textColor="@color/textWhite"
        android:textSize="16sp"
        app:gHintTitle="none"
        app:gLineColor="@color/blue_900"
        app:gLineSize="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_color_131422_side"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         />
    <Button
        android:id="@+id/btn_import"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:text="@string/import_btn_next"
        android:textSize="16sp"
        android:textColor="@color/textWhite"
        android:textStyle="bold"
        android:background="#393A50"/>
</com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
