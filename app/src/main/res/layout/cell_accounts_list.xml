<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal">

       <ImageView
           android:layout_width="31dp"
           android:layout_height="31dp"
           android:background="@drawable/ic_eth"
           android:layout_gravity="center_vertical"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="22dp"
           android:text="ETH-Wallet"
           android:textSize="16sp"
           android:textColor="@color/colorTextBlack"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="10dp"/>
       <View
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"/>
       <ImageView
           android:id="@+id/im_to"
           android:layout_width="9dp"
           android:layout_height="15dp"
           android:background="@drawable/ic_to"
           android:layout_gravity="center_vertical"/>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreySecond"/>
    <TextView
        android:id="@+id/tv_eth_address"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorTextGreyThird"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:text="0xe567hjfi5fkjio000fajlkdjfsdiefljfaaefwfrwds"
        />


</LinearLayout>