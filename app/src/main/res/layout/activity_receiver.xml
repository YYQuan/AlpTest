<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191A2A"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#010110"
        android:paddingTop="@dimen/statusBarSize"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:background="@drawable/ic_title_back_white"/>
        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="接收ETH"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_share"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#131422"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/iv_address_code"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/textBlack"
            android:layout_marginTop="40dp"/>


        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="#393A50"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_black_393a50_side"
            android:text="保存二维码"

            android:layout_gravity="center_horizontal"/>





        <TextView
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="177dp"
            android:layout_height="16dp"
            android:text="ETH接收地址"
            android:textColor="#494A60"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/txt_address"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="0x2fa986D54445a0c7e337A735Daf1121a4038474e"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            />




        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="复制地址"
            android:textColor="#ff393a50"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_black_393a50_side"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="331dp"
        android:layout_height="32dp"
        android:text="温馨提示：请勿向上述地址充值任何非 ETH 资产，否则资产将不可找回。"
        android:textColor="#ff595a6e"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>