<?xml version="1.0" encoding="utf-8"?>
<com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".functionModule.Wallet.WalletActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#295EF7"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/statusBarSize">
        <FrameLayout
            android:id="@+id/lay_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/ic_title_back_white"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_title"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_saoma"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/ic_saoma"/>
    </android.support.percent.PercentRelativeLayout>
    <com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="5%"
            />
        <Button
            android:id="@+id/btn_mnemonics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="27%"
            app:layout_heightPercent="7%"
            app:layout_marginTopPercent="4%"
            android:text="@string/import_mnemonics"
            android:textColor="@color/textWhite"
            android:background="@drawable/bg_color_9fadca"
            android:textSize="18sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="5%"
            />

        <Button
            android:id="@+id/btn_keystore"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="26%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="20dp"
            app:layout_marginTopPercent="4%"

            android:gravity="center"
            android:text="@string/import_keystore"
            android:textAllCaps="false"
            android:textColor="@color/textWhite"
            android:background="@drawable/bg_color_9fadca"
            android:textSize="18sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="5%"
            />
        <Button
            android:id="@+id/btn_privateKey"

            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="26%"
            app:layout_heightPercent="7%"
            android:layout_marginTop="20dp"
            app:layout_marginTopPercent="4%"
            android:gravity="center"
            android:text="@string/import_private"
            android:textColor="@color/textWhite"
            android:background="@drawable/bg_color_9fadca"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="middle"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="5%"
            />
    </com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>
    <FrameLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>
</com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>


