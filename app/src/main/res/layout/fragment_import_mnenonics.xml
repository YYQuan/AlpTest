<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191A2A"
    android:orientation="vertical"
    tools:context=".functionModule.Wallet.WalletActivity"
    android:paddingTop="40dp">


    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/ed_mnenonics"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="left"
        android:padding="20dp"
        android:hint="输入助记词"
        android:textColorHint="#4E4F6C"
        android:textColor="@color/textWhite"
        android:textSize="16sp"
        android:inputType="textMultiLine"

        app:gHintTitle="none"
        app:gLineColor="@color/blue_900"
        app:gLineSize="1dp"
        android:background="@drawable/bg_color_131422_side"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#ff707185"
        android:textSize="12sp"
        android:text="通常是12个（有时是24个）用单个空格分隔的单词"/>



    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/ed_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Wallet Name"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textColorHint="#4E4F6C"
        android:textColor="@color/textWhite"
        android:textSize="16sp"
        app:gHintTitle="none"
        app:gLineColor="@color/blue_900"
        app:gLineSize="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_color_131422_side"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_import"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_44"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="导入"
        android:textSize="16sp"
        android:textColor="@color/textWhite"
        android:textStyle="bold"
        android:background="#393A50"/>
</LinearLayout>
