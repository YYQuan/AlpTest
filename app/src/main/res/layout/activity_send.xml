<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alphawizard.hdwallet.alphahdwallet.functionModule.send.SendActivity"
    android:orientation="vertical"
    android:background="#191A2A"
    >




    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#010110"
        android:paddingTop="@dimen/statusBarSize"
        app:titleTextAppearance="@style/TextAppearance.Title"
        android:visibility="gone">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#010110"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/statusBarSize">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="9dp"
            android:layout_height="15dp"

            android:layout_marginStart="21dp"
            android:background="@drawable/ic_title_back_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送ETH"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_color_131422_side"
        >
        <View
            android:id="@+id/v_placeholder1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"/>

        <net.qiujuer.genius.ui.widget.EditText
            android:id="@+id/ed_eth_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="接收地址"
            android:layout_marginEnd="60dp"
            android:digits="1234567890abcdefx"
            android:maxLength="128"
            android:singleLine="true"
            android:ellipsize="middle"
            android:background="@drawable/bg_color_131422_side"
            android:textColorHint="#4E4F6C"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            app:gHintTitle="none"
            app:gLineSize="0dp"
            android:layout_toRightOf="@id/v_placeholder1"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>
        
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="19dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_erweima_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp"
            />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_color_131422_side"
        >
        <View
            android:id="@+id/v_placeholder2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"/>
        <net.qiujuer.genius.ui.widget.EditText
            android:id="@+id/ed_eth_amounts"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:hint="ETH数量"
            android:maxLength="64"
            android:maxLines="2"
            android:textColorHint="#4E4F6C"
            android:textColor="@color/textWhite"
            android:textSize="16sp"
            android:background="@drawable/bg_color_131422_side"
            app:gHintTitle="none"
            app:gLineSize="0dp"
            android:inputType="number|numberDecimal"
            android:layout_toRightOf="@id/v_placeholder2"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <ImageView

            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@mipmap/ic_tip_grey"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_eth_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="3dp"


            android:text="可用：12.455ETH"
            android:textColor="#ff4e4f6c"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_send"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:text="发送"
        android:textSize="16sp"
        android:textColor="@color/textWhite"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_color_393a50"
        />
</LinearLayout>
