<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alphawizard.hdwallet.alphahdwallet.functionModule.send.SendActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >




    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="@color/colorAccent"
        android:paddingTop="@dimen/statusBarSize"
        app:titleTextAppearance="@style/TextAppearance.Title">

        <FrameLayout
            android:id="@+id/layout_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView

                android:layout_width="12dp"
                android:layout_height="17dp"
                android:background="@drawable/ic_back"/>
            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:textSize="16sp"
                android:textColor="@color/textWhite"
                android:text="返回"/>

        </FrameLayout>


        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:text="发送ETH"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"

            />
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_edit_default"
        >
        <View
            android:id="@+id/v_placeholder1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"/>

        <net.qiujuer.genius.ui.widget.EditText
            android:id="@+id/ed_eth_address"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:hint="接收地址"
            android:inputType="textMultiLine"
            android:maxLength="64"
            android:maxLines="2"
            android:textColorHint="@color/black_alpha_128"
            android:textColor="@color/blue_900"
            android:textSize="16sp"
            app:gHintTitle="none"
            app:gLineSize="0dp"
            android:layout_toRightOf="@id/v_placeholder1"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>
        
        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_code_icon"
            android:backgroundTint="#D4D4D4"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp"
            />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_default"
        >
        <View
            android:id="@+id/v_placeholder2"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"/>
        <net.qiujuer.genius.ui.widget.EditText
            android:id="@+id/ed_eth_amounts"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:hint="ETH数量"
            android:inputType="textMultiLine"
            android:maxLength="64"
            android:maxLines="2"
            android:textColorHint="@color/black_alpha_128"
            android:textColor="@color/blue_900"
            android:textSize="16sp"
            app:gHintTitle="none"
            app:gLineSize="0dp"
            android:layout_toRightOf="@id/v_placeholder2"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        >
        <ImageView

            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_information"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:text="可用ETH ： 152.5"
            android:textColor="@color/textGreySecond"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_send"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:text="发送"
        android:textSize="18sp"
        android:textColor="@color/textWhite"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@color/textAccent"
        />
</LinearLayout>
