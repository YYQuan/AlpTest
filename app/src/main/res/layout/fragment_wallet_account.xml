<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".functionModule.Wallet.WalletActivity">


    <ImageView
        android:id="@+id/iv_eth"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_eth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_balances"
        android:layout_width="105dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/colorTextBlue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_eth"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_send"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_grey"
        android:foreground="@drawable/ic_touch_fg"
        android:padding="0dp"
        android:text="发送"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/textLight"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_balances" />

    <Button
        android:id="@+id/btn_receive"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_blue"
        android:text="接收"
        android:textColor="@color/colorTextWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_send"
        app:layout_constraintTop_toBottomOf="@+id/tv_balances" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="交易详情"
        android:textColor="@color/colorTextGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_send" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_transactionBean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp" />

    <com.alphawizard.hdwallet.common.base.Layout.PlaceHolder.EmptyLayout
        android:id="@+id/place_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="237">

            <include
                android:id="@+id/include"
                layout="@layout/layout_app_bar_with_tab" />

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="126" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
