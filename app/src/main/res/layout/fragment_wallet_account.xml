<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".functionModule.Wallet.WalletActivity">


    <ImageView
        android:id="@+id/iv_eth"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_eth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_balances"
        android:layout_width="105dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/textAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_eth"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_send"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_grey"
        android:foreground="@drawable/ic_touch_fg"
        android:padding="0dp"
        android:text="发送"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/textLight"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_balances" />

    <Button
        android:id="@+id/btn_receive"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_blue"
        android:text="接收"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_send"
        app:layout_constraintTop_toBottomOf="@+id/tv_balances" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="交易详情"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_send" />

    <Button
        android:id="@+id/btn_all_transaction"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white"
        android:text="全部"
        android:textColor="#666666"
        app:layout_constraintEnd_toStartOf="@+id/btn_receive_transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_receive_transaction"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white"
        android:text="接收"
        android:textColor="#666666"
        app:layout_constraintStart_toEndOf="@+id/btn_all_transaction"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_send_transaction"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white"
        android:text="发送"
        android:textColor="#666666"
        app:layout_constraintStart_toEndOf="@+id/btn_receive_transaction"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/iv_below_all_transaction"
        android:layout_width="79dp"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:background="#3574FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_all_transaction" />

    <ImageView
        android:id="@+id/iv_below_receive_transaction"
        android:layout_width="79dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:background="#3574FA"
        app:layout_constraintStart_toEndOf="@+id/iv_below_all_transaction"
        app:layout_constraintTop_toBottomOf="@+id/btn_receive_transaction" />

    <ImageView
        android:id="@+id/iv_below_send_transaction"
        android:layout_width="79dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:background="#3574FA"
        app:layout_constraintStart_toEndOf="@+id/iv_below_receive_transaction"
        app:layout_constraintTop_toBottomOf="@+id/btn_send_transaction" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_transactionBean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_receive_transaction"
        tools:layout_editor_absoluteX="56dp" />

    <com.alphawizard.hdwallet.common.base.Layout.PlaceHolder.EmptyLayout
            android:id="@+id/place_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>






</android.support.constraint.ConstraintLayout>
