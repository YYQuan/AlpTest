<?xml version="1.0" encoding="utf-8"?>
<com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".functionModule.backupMnemonics.BackupMnemonicsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="#191A2A"
        android:paddingTop="@dimen/statusBarSize"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:titleTextColor="@color/white"
        android:layout_alignParentTop="true"
        app:titleTextAppearance="@style/TextAppearance.Title"
        android:visibility="gone">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"

        android:gravity="center_vertical"
        android:paddingTop="@dimen/statusBarSize">
        <FrameLayout
            android:id="@+id/lay_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/ic_title_back_white"
                />
        </FrameLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_backup"
        android:layout_gravity="center_horizontal"

        app:layout_marginTopPercent="4%"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_main_tips"
        android:textColor="#4480FF"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        app:layout_marginTopPercent="3%"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_tips_line1"
        android:textColor="#323232"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="9%"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backup_tips_line2"
        android:textColor="#323232"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="2%"/>

    <TextView
        android:id="@+id/txt_mnemonics"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F1F6FF"
        android:text="right  straegy  nerve  afraid  fancy  pigeon  fatal  tone  rather  cross  little  cry"
        android:textColor="#323232"
        android:textSize="13sp"
        android:lineSpacingExtra = "20dp"
        android:layout_gravity="center_horizontal"
        app:layout_marginTopPercent="4%"
        android:paddingLeft="38dp"
        android:paddingRight="38dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/txt_copy"
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:text="@string/backup_copy"
        android:textColor="@color/colorBlue"
        android:gravity="center_horizontal"
        app:layout_marginTopPercent="4%"
        />


    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/ed_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_marginTopPercent="6%"


        android:gravity="left|center_vertical"
        android:layout_gravity="center"

        android:paddingLeft="20dp"
        android:hint="@string/backup_input_wallet_name"
        android:inputType="textMultiLine"
        app:gHintTitle="none"
        app:gLineColor="@color/blue_900"
        app:gLineSize="1dp"
        android:textColorHint="#C3CEFF"
        android:textColor="#323232"
        android:textSize="15sp"

        android:background="#fff3f7ff"
        />




    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_marginBottomPercent="6%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:background="@drawable/bg_gradient_blue"

        android:text="@string/backup_next"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />

</com.alphawizard.hdwallet.alphahdwallet.widget.PercentLinearlayout>