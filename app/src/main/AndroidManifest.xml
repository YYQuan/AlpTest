<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alphawizard.hdwallet.alphahdwallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".functionModule.Launch.LaunchActivity"
            android:theme="@style/AppTheme.TransStatusBar.Base">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".functionModule.CreateOrImport.CreateOrImportActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Main"/>

        <activity
            android:name=".functionModule.Wallet.WalletActivity"
            android:label="@string/title_activity_first_launch"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.TransStatusBar.Base"/>
        <activity
            android:name=".functionModule.send.SendActivity"
            android:label="@string/title_activity_send"
            android:theme="@style/AppTheme.TransStatusBar.Base"
            />
        <activity
            android:name=".functionModule.ConfirmSend.ConfirmSendActivity"
            android:label="@string/title_activity_confirm_send" />
        <activity
            android:name=".functionModule.Import.ImportActivity"
            android:label="@string/title_activity_import"
            android:theme="@style/AppTheme.TransStatusBar.Base"/>
        <activity
            android:name=".functionModule.web3.Web3Activity"
            android:label="@string/title_activity_first_launch" />
        <activity
            android:name=".functionModule.backupMnemonics.BackupMnemonicsActivity"
            android:label="@string/title_activity_backup_mnemonics" />
        <activity
            android:name=".functionModule.verifyMnemonics.VerifyMnemonicsActivity"
            android:label="@string/title_activity_verify_mnemonics" />
        <activity
            android:name=".functionModule.WalletDetail.WalletDetailActivity"
            android:label="@string/title_activity_wallet_detail"
            android:theme="@style/AppTheme.TransStatusBar.Base"></activity>
        <activity
            android:name=".functionModule.ManagerAccounts.ManagerAccountsActivity"
            android:label="@string/title_activity_first_launch"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.TransStatusBar.Base"/>
    </application>

</manifest>